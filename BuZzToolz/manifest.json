{
  "name": "BuZzToolz",
  "version": "0.0.2.1",
  "manifest_version": 3,
  "description": "Enhance bSocial with additional features.",
  "action": { "default_popup": "default_popup.html" },
  "permissions": ["storage", "activeTab"],
  "icons": {
    "16": "icons/BuZzToolz.svg",
    "48": "icons/BuZzToolz.svg",
    "128": "icons/BuZzToolz.svg"
  },
  "content_scripts": [
    {
      "matches": ["https://*.bsocial.buzz/*"],
      "js": ["content_scripts/Themes.js", "content_scripts/DownloadButtonLoader.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["pages/downloadLoader/downloadLoader.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{9a492a80-1ad2-4c03-8072-e907fb2706aa}"
    }
  }
}
